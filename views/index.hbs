<h1>{{title}} ({{locale}})</h1>
<p>Welcome to the {{title}}</p>

{{# each products }}
  <div class="row">
  {{#if this.img}}  
    <div class="col-sm-3">
      <img src="{{ this.img }}" class="img-responsive img-rounded center-block">
    </div>
    <div class="col-sm-9">
  {{else}}
    <div class="col-sm-12">
  {{/if}}
      <div class="thumbnail">
        <div class="caption">
          <h3>{{ this.title }}</h3>
            <p class="description">{{{this.description}}}</p>
            <div class="clearfix">
            <div class="price pull-left"><i class="glyphicon {{ this.displayCurrencyIcon }}" aria-hidden="true"></i>{{ this.price }} {{ this.displayCurrency }}</div>
              <a href="{{ ../basePath }}add/{{ this.id }}" class="btn btn-primary pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
            </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}