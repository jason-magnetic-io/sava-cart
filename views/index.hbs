<h1>{{ title }} ({{ locale }})</h1>
<h4>Welcome to the {{ title }}</h4>

{{# each products }}
<div class="row">
  {{#if this.img }}
  <div class="col-sm-3">
    <img src="{{ this.img }}" class="img-responsive img-rounded center-block">
  </div>
  <div class="col-sm-9">
    {{else}}
    <div class="col-sm-12">
      {{/if}}
      <div class="thumbnail">
        <div class="caption">
          <h3>{{ this.title }}</h3>
          <p class="description">{{{ this.description }}}</p>
          {{#if this.stars }}
          <div>
            <div id="stars{{ this.id }}" style="display: inline-block;padding-left: 0px;"></div>
            {{#if this.reviews }}<p>{{ this.reviews }}&nbsp;Reviews</p>{{/if}}
          </div>
          <script>
            $(function () {
              $("#stars{{this.id}}").rateYo({
                starWidth: "24px",
                rating: {{ this.stars }},
              readOnly: true 
              });
            });
          </script>
          {{/if}}
          <div class="clearfix">
            {{#if this.displayCurrencyIcon}}
            <div class="price pull-left"><i class="glyphicon {{ this.displayCurrencyIcon }}" aria-hidden="true"></i>{{ formatNum locale this.price }}</div>
            {{else if this.displayCurrencyLeft}}
            <div class="price pull-left">{{ this.displayCurrency }} {{ formatNum locale this.price }}</div>
            {{else}}
            <div class="price pull-left">{{ formatNum locale this.price }} {{ this.displayCurrency }}</div>
            {{/if}}
            <a href="{{ ../basePath }}add/{{ this.id }}" class="btn btn-primary pull-right" role="button"><i class="fa fa-shopping-cart"
                aria-hidden="true"></i> Add to cart</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}